<h1>My tasks</h1>
<ul>
<% @tasks.each do |task|%>
  <li><%= link_to task.title, "http://localhost:3000/tasks/#{task.id}" %>
  <%= link_to 'Delete', task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
<% end %>
</ul>
<%= link_to "+ Add a new task", "http://localhost:3000/tasks/new" %>
